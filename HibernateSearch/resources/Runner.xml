    <bean id="sequenceDao" class="org.genedb.db.dao.SequenceDao">
    	<property name="sessionFactory" ref="sessionFactory" />
		<property name="platformTransactionManager" ref="transactionManager" />
    </bean>
    
    <bean id="cvDao" class="org.genedb.db.dao.CvDao">
    	<property name="sessionFactory" ref="sessionFactory" />
		<property name="platformTransactionManager" ref="transactionManager" />
    </bean>
    
	<bean id="indexChado" class="org.genedb.hibernate.search.IndexChado" lazy-init="true">
		<property name="hibernateTransactionManager" ref="transactionManager" />
		<property name="sequenceDao" ref="sequenceDao"/>
		<property name="cvDao" ref="cvDao"/>
	</bean>
    
    <bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
    	<property name="sessionFactory" ref="sessionFactory" />
    </bean>
    
