<?xml version="1.0" encoding="UTF-8" ?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:tx="http://www.springframework.org/schema/tx"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
    http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd"
    default-init-method="postConstruction">

  <tx:annotation-driven />

	<bean name="semanticLog" class="org.genedb.db.domain.misc.SemanticLog" />

	<bean name="productService" class="org.genedb.db.domain.hibernateImpls.ProductServiceImpl">
		<property name="sessionFactory" ref="sessionFactory" />
		<property name="semanticLog" ref="semanticLog" />
	</bean>
    
    <bean name="basicGeneService" class="org.genedb.db.domain.hibernateImpls.BasicGeneServiceImpl">
        <property name="sessionFactory" ref="sessionFactory" />
    </bean>
    
    <bean name="geneService" class="org.genedb.db.domain.hibernateImpls.GeneServiceImpl">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
        
    <bean name="lockAndNotificationService" class="org.genedb.db.domain.hibernateImpls.LockAndNotificationServiceImpl">
		<!-- <property name="sessionFactory" ref="sessionFactory" /> -->
		<!-- <property name="cvDao" ref="cvDao" /> -->
	</bean>

	<bean name="messageService" class="org.genedb.db.domain.hibernateImpls.MessageServiceImpl" />

</beans>
