<?xml version="1.0"?>

<project name="genedb-domain" default="fulljar" basedir=".">

	<import file="../genedb-libs/build.xml" />

	<target name="init" depends="genedb-libs.init">
		<echo message="Should have just created ant-build" />
	</target>
	
	
	<target name="fulljar" depends="" description="Create full JAR file with all Spring classes">

		
		<delete dir="ant-build" />
		<delete file="genedb-domain.jar" />
		<copydir dest="ant-build" src="bin" />
		<copydir dest="ant-build" src="conf" />

		<jar jarfile="genedb-domain.jar">
			<fileset dir="ant-build" />
			<manifest>
				<attribute name="Implementation-Title" value="GeneDB Domain" />
				<attribute name="Implementation-Version" value="0.1" />
			</manifest>
		</jar>

	</target>

</project>
