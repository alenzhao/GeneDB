<?xml version="1.0"?>

<project name="genedb-libs" basedir=".">
	<description>This build file simply describe a set of 
	classpaths "exported" from this project, and common 
	properties</description>
	
	<!-- Paths/Properties -->
	<property name="spring-version" value="2.5.4" />
	<property name="build.dir" value="./ant-build" />
	<property name="dist.dir" value="${build.dir}/dist" />
	<property name="classes.dir" value="${build.dir}/classes" />
	
	<dirname property="imported.basedir" file="${ant.file.genedb-libs}" />
    <property name="libDir" value="${imported.basedir}/lib" />

	<!-- Classpaths -->
	<path id="core-libs">
		<path location="${libDir}/spring-${spring-version}.jar" />
		<path location="${libDir}/spring-bundle-${spring-version}/log4j/log4j-1.2.15.jar" />
	</path>

	<path id="misc-gui-libs">
		<fileset dir="${libDir}/gui">
			<include name="**/*.jar"/>
		</fileset>
	</path>
	
	<path id="jakarta-commons-lang">
		<path location="${libDir}/spring-bundle-${spring-version}/jakarta-commons/commons-lang.jar" />
	</path>
	
	<!-- Generate targets -->
	<target name="init" description="Create initial build structure">
		<mkdir dir="${build.dir}" />
		<mkdir dir="${dist.dir}" />
		<mkdir dir="${classes.dir}" />
	</target>
	
    <target name="clean" description="Remove all build artifacts">
      <delete dir="${build.dir}" includeEmptyDirs="true" />
    </target>
	
		
</project>
