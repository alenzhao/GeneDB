<ivy-module version="2.0">
    <info organisation="org.genedb" module="genedb-web"/>
    <configurations>
      <conf name="default"/>
      <conf name="groovy" visibility="private" />
    </configurations>

    <dependencies>
      <dependency org="org.springframework" name="org.springframework.web.servlet" rev="3.0.0.M1" conf="default->*">
        <!--  We don't need these jars because they're already included in Tomcat, and
              if they are deployed to the webapp then they cause conflicts. -->
        <exclude name="com.springsource.javax.el"/>
        <exclude name="com.springsource.javax.servlet"/>
        <exclude name="com.springsource.javax.servlet.jsp"/>
      </dependency>
      <dependency org="org.springframework" name="org.springframework.test" rev="3.0.0.M1" conf="default->*">
        <!--  We don't need these jars because they're already included in Tomcat, and
              if they are deployed to the webapp then they cause conflicts. -->
        <exclude name="com.springsource.javax.el"/>
        <exclude name="com.springsource.javax.servlet"/>
        <exclude name="com.springsource.javax.servlet.jsp"/>
      </dependency>
      <dependency org="org.springframework" name="org.springframework.orm" rev="3.0.0.M1" conf="default->*" />
      <dependency org="org.springframework" name="org.springframework.aspects" rev="3.0.0.M1" conf="default->*" />
      <dependency org="org.apache.commons"  name="com.springsource.org.apache.commons.dbcp" rev="1.2.2.osgi" conf="default->*" />
      <dependency org="org.hibernate" name="com.springsource.org.hibernate.search" rev="3.0.1.GA" conf="default->*" />
      <dependency org="org.hibernate" name="com.springsource.org.hibernate.validator" rev="3.0.0.GA" conf="default->*" />
      <dependency org="org.junit" name="com.springsource.org.junit" rev="4.5.0" conf="default->*" />
      <dependency org="com.google.collect" name="com.springsource.com.google.common.collect" rev="0.8.0.20080820" conf="default->*" />
      <dependency org="org.codehaus.groovy" name="com.springsource.org.codehaus.groovy" rev="1.5.7" conf="default->*" />

      <!--  ASM Commons is used by org.springframework.core.type.classreading.SimpleMetadataReader,
            but is not pulled in as a dependency. I assume this is an oversight that will be
            corrected at some point; when it is, this explicit dependency here may be removed.
            (rh11, 2008-12-17)
        -->
      <dependency org="org.objectweb.asm" name="com.springsource.org.objectweb.asm.commons" rev="3.1.0" conf="default->*" />
    </dependencies>
</ivy-module>
