<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:dwr="http://www.directwebremoting.org/schema/spring-dwr"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd
        http://www.directwebremoting.org/schema/spring-dwr http://www.directwebremoting.org/schema/spring-dwr-2.0.xsd"
	default-init-method="postConstruction">

      
	<bean name="/ProductService" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
		<property name="service" ref="productService"/>
		<property name="serviceInterface" value="org.genedb.db.domain.services.ProductService"/>
	</bean>
      
	<bean name="/GeneService" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
		<property name="service" ref="geneService"/>
		<property name="serviceInterface" value="org.genedb.db.domain.services.GeneService"/>
	</bean>
      
	<bean name="/LockAndNotificationService" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
		<property name="service" ref="lockAndNotificationService"/>
		<property name="serviceInterface" value="org.genedb.db.domain.services.LockAndNotificationService"/>
	</bean>
	
	<bean name="/MessageService" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
		<property name="service" ref="messageService" />
		<property name="serviceInterface" value="org.genedb.db.domain.serviceImpls.MessageServiceImpl" />
	</bean>
</beans>
